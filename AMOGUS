      <tbody>
        <tr>
          <td id="image"><img src="image/CapyContinent.png"></td>
          <td id="nameAndcost">
            <p>Capy Continent</p>
            <p><span id="CapyContinentCost">50000</span> CapyCoins</p>
            <p>625 CapyCoin/s</p>
          </td>
          <td id="amount"><span id="CapyContinents">0</span></td>
        </tr>
      </tbody>
    </table>
    <table class="shopButton" onclick="buyCapyPlanet()">
      <tbody>
        <tr>
          <td id="image"><img src="image/CapyPlanet.png"></td>
          <td id="nameAndcost">
            <p>Capy Planet</p>
            <p><span id="CapyPlanetCost">200000</span> CapyCoins</p>
            <p>2200 CapyCoin/s</p>
          </td>
          <td id="amount"><span id="CapyPlanets">0</span></td>
        </tr>

        <script>
          var CapyCoins = 0;
          var clickPower = 1;
          var CapybaraCost = 10;
          var Capybaras = 0;
          var CapyFarmCost = 100;
          var CapyFarms = 0;
          var CapyFactoryCost = 1200;
          var CapyFactories = 0;
          var CapyCityCost = 10000;
          var CapyCities = 0;
          var CapyContinents = 0;
          var CapyContinentCost = 50000;
          var CapyPlanets = 0;
          var CapyPlanetCost = 200000

          function buyCapybara() {
            if (CapyCoins >= CapybaraCost) {
              CapyCoins = CapyCoins - CapybaraCost;
              Capybaras = Capybaras + 1;
              CapybaraCost = Math.round(10 * 1.15 ** Capybaras);
              document.getElementById("CapyCoins").innerHTML = CapyCoins;
              document.getElementById("CapybaraCost").innerHTML = CapybaraCost;
              document.getElementById("Capybaras").innerHTML = Capybaras;
              updateCapyCoinSecond();
            }
          }

          function buyCapyFarm() {
            if (CapyCoins >= CapyFarmCost) {
              CapyCoins = CapyCoins - CapyFarmCost;
              CapyFarms = CapyFarms + 1;
              CapyFarmCost = Math.round(100 * 1.145 ** CapyFarms);
              document.getElementById("CapyCoins").innerHTML = CapyCoins;
              document.getElementById("CapyFarmCost").innerHTML = CapyFarmCost;
              document.getElementById("CapyFarms").innerHTML = CapyFarms;
              updateCapyCoinSecond();
            }
          }

          function buyCapyFactory() {
            if (CapyCoins >= CapyFactoryCost) {
              CapyCoins = CapyCoins - CapyFactoryCost;
              CapyFactories = CapyFactories + 1;
              CapyFactoryCost = Math.round(1200 * 1.14 ** CapyFactories);
              document.getElementById("CapyCoins").innerHTML = CapyCoins;
              document.getElementById("CapyFactoryCost").innerHTML = CapyFactoryCost;
              document.getElementById("CapyFactories").innerHTML = CapyFactories;
              updateCapyCoinSecond();
            }
          }

          function buyCapyCity() {
            if (CapyCoins >= CapyCityCost) {
              CapyCoins = CapyCoins - CapyCityCost;
              CapyCities = CapyCities + 1;
              CapyCityCost = Math.round(10000 * 1.135 ** CapyCities);
              document.getElementById("CapyCoins").innerHTML = CapyCoins;
              document.getElementById("CapyCityCost").innerHTML = CapyCityCost;
              document.getElementById("CapyCities").innerHTML = CapyCities;
              updateCapyCoinSecond();
            }
          }

          function buyCapyContinent() {
            if (CapyCoins >= CapyContinentCost) {
              CapyCoins = CapyCoins - CapyContinentCost;
              CapyContinents = CapyContinents + 1;
              CapyContinentCost = Math.round(50000 * 1.13 ** CapyContinents);
              document.getElementById("CapyCoins").innerHTML = CapyCoins;
              document.getElementById("CapyContinentCost").innerHTML = CapyContinentCost;
              document.getElementById("CapyContinents").innerHTML = CapyContinents;
              updateCapyCoinSecond();
            }
          }

          function buyCapyPlanet() {
            if (CapyCoins >= CapyPlanetCost) {
              CapyCoins = CapyCoins - CapyPlanetCost;
              CapyPlanets = CapyPlanets + 1;
              CapyPlanetCost = Math.round(200000 * 1.125 ** CapyPlanets);
              document.getElementById("CapyCoins").innerHTML = CapyCoins;
              document.getElementById("CapyPlanetCost").innerHTML = CapyPlanetCost;
              document.getElementById("CapyPlanets").innerHTML = CapyPlanets;
              updateCapyCoinSecond();
            }
          }

          function addToCapyCoins(amount) {
            CapyCoins = CapyCoins + amount;
            document.getElementById("CapyCoins").innerHTML = CapyCoins;
          }

          function updateCapyCoinSecond() {
            CapyCoinSecond = Capybaras + CapyFarms * 5 + CapyFactories * 25 + CapyCities * 125 + CapyContinents * 625 + CapyPlanets * 2200;
            document.getElementById("CapyCoinSecond").innerHTML = CapyCoinSecond;
          }
          setInterval(function() {
            CapyCoins = CapyCoins + Capybaras;
            CapyCoins = CapyCoins + CapyFarms * 5;
            CapyCoins = CapyCoins + CapyFactories * 25;
            CapyCoins = CapyCoins + CapyCities * 125;
            CapyCoins = CapyCoins + CapyContinents * 625;
            CapyCoins = CapyCoins + CapyPlanets * 2200;
            document.getElementById("CapyCoins").innerHTML = CapyCoins;
            document.title = CapyCoins + " CapyCoins - CapyCoinClicker";
          }, 1000);

          function loadGame() {
            var savedGame = JSON.parse(localStorage.getItem("gameSave"));
            if (typeof savedGame.CapyCoins !== "undefined") CapyCoins = savedGame.CapyCoins;
            if (typeof savedGame.clickPower !== "undefined") clickPower = savedGame.clickPower;
            if (typeof savedGame.CapybaraCost !== "undefined") CapybaraCost = savedGame.CapybaraCost;
            if (typeof savedGame.Capybaras !== "undefined") Capybaras = savedGame.Capybaras;
            if (typeof savedGame.CapyFarmCost !== "undefined") CapyFarmCost = savedGame.CapyFarmCost;
            if (typeof savedGame.CapyFarms !== "undefined") CapyFarms = savedGame.CapyFarms;
            if (typeof savedGame.CapyFactoryCost !== "undefined") CapyFactoryCost = savedGame.CapyFactoryCost;
            if (typeof savedGame.CapyFactories !== "undefined") CapyFactories = savedGame.CapyFactories;
            if (typeof savedGame.CapyCityCost !== "undefined") CapyCityCost = savedGame.CapyCityCost;
            if (typeof savedGame.CapyCities !== "undefined") CapyCities = savedGame.CapyCities;
            if (typeof savedGame.CapyContinents !== "undefined") CapyContinents = savedGame.CapyContinents;
            if (typeof savedGame.CapyContinentCost !== "undefined") CapyContinentCost = savedGame.CapyContinentCost;
            if (typeof savedGame.CapyPlanets !== "undefined") CapyPlanets = savedGame.CapyPlanets;
            if (typeof savedGame.CapyPlanetCost !== "undefined") CapyPlanetCost = savedGame.CapyPlanetCost;
            if (typeof savedGame.CapyCoinSecond !== "undefined") CapyCoinSecond = savedGame.CapyCoinSecond;
          }

          function saveGame() {
            var gameSave = {
              CapyCoins: CapyCoins,
              clickPower: clickPower,
              CapybaraCost: CapybaraCost,
              Capybaras: Capybaras,
              CapyFarmCost: CapyFarmCost,
              CapyFarms: CapyFarms,
              CapyFactoryCost: CapyFactoryCost,
              CapyFactories: CapyFactories,
              CapyCityCost: CapyCityCost,
              CapyCities: CapyCities,
              CapyContinents: CapyContinents,
              CapyContinentCost: CapyContinentCost,
              CapyPlanets: CapyPlanets,
              CapyPlanetCost: CapyPlanetCost,
              CapyCoinSecond: CapyCoinSecond
            };
            localStorage.setItem("gameSave", JSON.stringify(gameSave));
          }

          function resetGame() {
            if (confirm("Reset all progress?")) {
              var gameSave = {};
              localStorage.setItem("gameSave", JSON.stringify(gameSave));
              location.reload();
            }
          }
          window.onload = function() {
            loadGame();
            updateCapyCoinSecond();
            document.getElementById("CapyCoins").innerHTML = CapyCoins;
            document.getElementById("CapybaraCost").innerHTML = CapybaraCost;
            document.getElementById("Capybaras").innerHTML = Capybaras;
            document.getElementById("CapyFarmCost").innerHTML = CapyFarmCost;
            document.getElementById("CapyFarms").innerHTML = CapyFarms;
            document.getElementById("CapyFactoryCost").innerHTML = CapyFactoryCost;
            document.getElementById("CapyFactories").innerHTML = CapyFactories;
            document.getElementById("CapyCityCost").innerHTML = CapyCityCost;
            document.getElementById("CapyCities").innerHTML = CapyCities;
            document.getElementById("CapyContinentCost").innerHTML = CapyContinentCost;
            document.getElementById("CapyContinents").innerHTML = CapyContinents;
            document.getElementById("CapyPlanetCost").innerHTML = CapyPlanetCost;
            document.getElementById("CapyPlanets").innerHTML = CapyPlanets;
          };
          setInterval(function() {
            saveGame();
          }, 30000);
        </script>

      </tbody>
    </table>
  </div>
</body>
